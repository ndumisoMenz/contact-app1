{
  "name": "contacts-app",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev:backend": "ts-node-dev --respawn --transpile-only backend/src/server.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build:backend": "tsc -p backend/tsconfig.json",
    "start:backend": "node backend/dist/server.js",
    "watch:backend": "nodemon backend/dist/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Contacts App with frontend and backend",
  "dependencies": {
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.21.2",
    "framer-motion": "^10.12.16",
    "mongoose": "^8.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.6.2",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
